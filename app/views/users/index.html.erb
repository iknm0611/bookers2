

<div class="conrainer">

<div class="row">

 <div class="col-md-3">

   <h2>User info</h2>

<table class="table">
 <tbody>

  <tr>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  </tr>

  <tr>
   <th>name</th>
<div class="profile-container">
  <th class="profile-name"><%= @user.name %></th>
</div>
  </tr>

  <tr>
      <th>introduction</th>
      <div class="profile-conrainer">
       <th class="profile-introduction"><%= @user.introduction %></th>
      </div>
  </tr>

</tbody>
</table>

 <div class="col-4">
  <% if @user.id == current_user.id %>
   <%= link_to "", edit_user_path(@user), class:'fas fa-user-cog btn btn-outline-secondary btn-block' %>
  <% end %>
  </div>


   <h2 class="mt-3">New book</h2>
    <%= form_with model:@book, local:true do |f| %>


    <div class="form-group">
    <label for="book_title">Title</label></br>
    <%= f.text_field :title %>
    </div>

    <div class="form-group">
    <label for="book_opinion">Opinion</label></br>

     <%= f.text_area :body %>

     </div>

    <div class="form-group">
    <%= f.submit 'Create Book', class:'btn btn-success' %>
    </div>


    <% end %>


  </div>




  <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
  <thead>

    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>

  <% @users.each do |user| %>

  <tr>
    <th>
      <%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%>
    </th>

    <th class="profile-name"><%= user.name %></th>

    <th>
      <%= link_to "Show", user_path(user.id) %>
    </th>
  </tr>




  <% end %>

  </tbody>
</table>

    </div>








  </div>

  </div>
