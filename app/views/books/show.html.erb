
<div class="conrainer">

<%= flash[:notice] %>

<div class="row">

 <div class="col-md-3">

   <h2>User info</h2>

<table class="table">
 <tbody>

  <tr>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  </tr>

  <tr>
   <th>name</th>
<div class="profile-container">
  <th class="profile-name"><%= @user.name %></th>
</div>
  </tr>

  <tr>
      <th>introduction</th>
      <div class="profile-conrainer">
       <th class="profile-introduction"><%= @user.introduction %></th>
      </div>
  </tr>

</tbody>
</table>

 <div class="col-4">
   <%= link_to "", edit_user_path(@user), class: 'fas fa-user-cog btn btn-outline-secondary btn-block'%>
 </div>

   <h2 class="mt-3">New book</h2>
    <%= form_with model:@book_new, local:true do |f| %>


    <div class="form-group">
    <label for="book_title">Title</label></br>
    <%= f.text_field :title %>
    </div>

    <div class="form-group">
    <label for="book_opinion">Opinion</label></br>

     <%= f.text_area :body %>

     </div>

    <div class="form-group">
    <%= f.submit 'Create Book', class:'btn btn-success' %>
    </div>


    <% end %>




  </div>





<div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		   <tr>
         <td>

         <%= link_to user_path(@user.id) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg"%></br>
          <%= @user.name %>
         <% end %>

         </td>

          <td>
           <%= link_to @book.title, book_path(@book.id) %>
           </td>

          <td>
           <%= @book.body %>
           </td>

            <td>
             <% if @user.id == current_user.id %>
             <%= link_to "Edit", edit_book_path, class:'btn btn-sm btn-success' %>
             <% end %>
             </td>

            <td>
             <% if @user.id == current_user.id %>
             <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class:'btn btn-sm btn-danger' %>
             <% end %>
             </td>
        </tr>
      </tbody>
      </table>
    </div>


 </div>
 </div>








